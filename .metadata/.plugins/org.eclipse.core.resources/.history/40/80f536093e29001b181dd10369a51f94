package ch03;

public class If01 {

	public static void main(String[] args) {
		
		//표현식
		if (true) {
			System.out.println("true 입니다.");
		}
		
		if (false) {
			System.out.println("실행안됨");
		} //실행안됨
		
		int num=0;
		if(num > 1) {
			System.out.println("num은 1보다 큽니다.");
		}else {
			System.out.println("num은 1보다 작습니다.");
		}
		
		int sum=30;
		if (sum==10) {
			System.out.println("sum은 10입니다.");
		}
		
	}

}

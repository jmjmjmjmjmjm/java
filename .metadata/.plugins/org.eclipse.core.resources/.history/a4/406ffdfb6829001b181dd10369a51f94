package ch03;

public class Gugudan01 {

	public static void main(String[] args) {
		
		int n1=2;
		
		
		System.out.println(n1+"*1=2");
		System.out.println(n1+"*2=4");
		System.out.println(n1+"*3=6");
		System.out.println(n1+"*4=8");
		System.out.println(n1+"*5=10");
		System.out.println(n1+"*6=12");
		System.out.println(n1+"*7=14");
		System.out.println(n1+"*8=16");
		System.out.println(n1+"*9=18");
		
		n1++;
		System.out.println();
		System.out.println(n1+"*1=3");
		System.out.println(n1+"*2=6");
		System.out.println(n1+"*3=9");
		System.out.println(n1+"*4=12");
		System.out.println(n1+"*5=15");
		System.out.println(n1+"*6=18");
		System.out.println(n1+"*7=21");
		System.out.println(n1+"*8=24");
		System.out.println(n1+"*9=27");
	}

}

package ch03;

import java.util.Scanner;

public class Star {
	public static void main(String[] args) {
		System.out.print("정수를 입력하시오 >> ");

		Scanner scan = new Scanner(System.in);
		int h;
		h = scan.nextInt();

//		for (int n = h; n > 0; n--) {
//			for (int i = n; i > 0; i--) {
//				System.out.print("*");
//			}
//			System.out.println();
//		}
//
//
//		for (int i = 0; i < h; i++) {
//			for (int j = 0; j < i; j++) {
//				System.out.print("*");
//			}
//			System.out.println();
//		}
//		
//		for (int n = h; n > 0; n--) {
//			for (int i = n; i > 0; i--) {
//				System.out.print("*");
//			}
//			System.out.println();
//		}
		System.out.println();
		int k = 1;
		for (int n = (h/2+1); n > 0; n--) {
			System.out.println();
			
			for (int i = n-1; i > 0; i--) {
				System.out.print(" ");

			}
			for (int i = 1; i <= k; i++) {
				System.out.print("*");
			}
			
			k = k + 2;
		}
			
		for (int i = 0; i < h; i++) {
			System.out.println();
			
				for (int j = 0; j <= i; j++) {
					System.out.print(" ");
				}
				
			
			
			for (int j = h-2; j > i; j--) {
				System.out.print("*");
				i=i+1;
			}
			
			
		}
		

	}
}
